{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Metrics",
  "type": "object",
  "required": ["schema_version", "iteration_id", "run_id", "status", "primary_metric"],
  "properties": {
    "schema_version": {"type": "string", "const": "1.0"},
    "iteration_id": {"type": "string"},
    "run_id": {"type": "string"},
    "status": {
      "type": "string",
      "enum": ["completed", "partial", "failed"]
    },
    "primary_metric": {
      "type": "object",
      "required": ["name", "value", "delta_vs_baseline"],
      "properties": {
        "name": {"type": "string"},
        "value": {"type": ["number", "null"]},
        "delta_vs_baseline": {"type": ["number", "null"]}
      },
      "additionalProperties": false
    },
    "baseline_results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "variant_results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
