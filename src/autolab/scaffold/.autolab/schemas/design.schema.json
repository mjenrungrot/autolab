{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DesignSpec",
  "type": "object",
  "required": [
    "schema_version",
    "id",
    "iteration_id",
    "hypothesis_id",
    "entrypoint",
    "compute",
    "metrics",
    "baselines"
  ],
  "properties": {
    "schema_version": {"type": "string", "const": "1.0"},
    "id": {"type": "string", "minLength": 1},
    "iteration_id": {"type": "string"},
    "hypothesis_id": {"type": "string"},
    "description": {"type": "string"},
    "entrypoint": {
      "type": "object",
      "required": ["module"],
      "properties": {
        "module": {"type": "string"},
        "args": {
          "type": "object",
          "additionalProperties": true
        },
        "cli": {"type": "string"}
      },
      "additionalProperties": false
    },
    "compute": {
      "type": "object",
      "required": ["location"],
      "properties": {
        "location": {"type": "string", "enum": ["local", "slurm"]},
        "walltime_estimate": {"type": "string", "pattern": "^\\d{2}:\\d{2}:\\d{2}$"},
        "memory_estimate": {"type": "string", "pattern": "^\\d+[KMGT]?B$"},
        "gpu_count": {"type": ["integer", "null"], "minimum": 0},
        "gpu_type": {"type": "string"},
        "partition": {"type": "string"},
        "qos": {"type": ["string", "null"]},
        "num_nodes": {"type": "integer", "minimum": 1},
        "notes": {"type": "string"},
        "seed": {"type": ["integer", "null"]}
      },
      "additionalProperties": false
    },
    "metrics": {
      "type": "object",
      "required": ["primary", "success_delta", "aggregation", "baseline_comparison"],
      "properties": {
        "primary": {
          "type": "object",
          "required": ["name", "unit", "mode"],
          "properties": {
            "name": {"type": "string"},
            "unit": {"type": "string"},
            "mode": {"type": "string", "enum": ["maximize", "minimize"]}
          },
          "additionalProperties": false
        },
        "secondary": {"type": "array", "items": {"type": "string"}},
        "success_delta": {"type": "string"},
        "aggregation": {"type": "string"},
        "baseline_comparison": {"type": "string"}
      },
      "additionalProperties": false
    },
    "baselines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "variants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "changes"],
        "properties": {
          "name": {"type": "string"},
          "changes": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "replicates": {
      "type": "object",
      "properties": {
        "count": {"type": "integer", "minimum": 1, "maximum": 100},
        "seed_strategy": {"type": "string", "enum": ["increment", "random", "fixed"]},
        "base_seed": {"type": ["integer", "null"]}
      },
      "required": ["count"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
