{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RunManifest",
  "type": "object",
  "required": ["schema_version", "run_id", "iteration_id", "host_mode", "command", "resource_request", "timestamps", "artifact_sync_to_local"],
  "properties": {
    "schema_version": {"type": "string", "const": "1.0"},
    "run_id": {"type": "string", "minLength": 1},
    "iteration_id": {"type": "string", "minLength": 1},
    "launch_mode": {"type": "string", "enum": ["local", "slurm"]},
    "host_mode": {"type": "string", "enum": ["local", "slurm"]},
    "command": {"type": "string", "minLength": 1},
    "started_at": {"type": "string", "format": "date-time"},
    "completed_at": {"type": "string", "format": "date-time"},
    "job_id": {"type": "string", "minLength": 1},
    "slurm": {
      "type": "object",
      "properties": {
        "job_id": {"type": "string", "minLength": 1}
      },
      "additionalProperties": true
    },
    "resource_request": {
      "type": "object",
      "properties": {
        "cpus": {"type": "integer", "minimum": 0},
        "memory": {"type": "string"},
        "gpu_count": {"type": "integer", "minimum": 0},
        "gpu_type": {"type": "string"},
        "partition": {"type": "string"},
        "qos": {"type": "string"},
        "job_id": {"type": "string", "minLength": 1},
        "slurm": {
          "type": "object",
          "properties": {
            "job_id": {"type": "string", "minLength": 1}
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "artifact_sync_to_local": {
      "type": "object",
      "properties": {
        "status": {"type": "string", "minLength": 1}
      },
      "additionalProperties": true
    },
    "timestamps": {
      "type": "object",
      "required": ["started_at"],
      "properties": {
        "started_at": {"type": "string", "format": "date-time"},
        "completed_at": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": true
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "host_mode": {"const": "slurm"}
        }
      },
      "then": {
        "anyOf": [
          {"required": ["job_id"]},
          {
            "required": ["slurm"],
            "properties": {
              "slurm": {
                "type": "object",
                "required": ["job_id"]
              }
            }
          },
          {
            "required": ["resource_request"],
            "properties": {
              "resource_request": {
                "type": "object",
                "required": ["job_id"]
              }
            }
          },
          {
            "required": ["resource_request"],
            "properties": {
              "resource_request": {
                "type": "object",
                "required": ["slurm"],
                "properties": {
                  "slurm": {
                    "type": "object",
                    "required": ["job_id"]
                  }
                }
              }
            }
          }
        ]
      }
    }
  ],
  "additionalProperties": true
}
