{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HumanReviewResult",
  "type": "object",
  "required": ["status", "reviewed_by", "reviewed_at"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["pass", "retry", "stop"]
    },
    "reviewed_by": {
      "type": "string",
      "minLength": 1
    },
    "reviewed_at": {
      "type": "string",
      "minLength": 1
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
