{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReviewResult",
  "type": "object",
  "required": ["status", "blocking_findings", "required_checks", "reviewed_at"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["pass", "needs_retry", "failed"]
    },
    "blocking_findings": {
      "type": "array",
      "items": {"type": "string"}
    },
    "required_checks": {
      "type": "object",
      "required": ["tests", "dry_run", "schema", "env_smoke", "docs_target_update"],
      "properties": {
        "tests": {"type": "string", "enum": ["pass", "skip", "fail"]},
        "dry_run": {"type": "string", "enum": ["pass", "skip", "fail"]},
        "schema": {"type": "string", "enum": ["pass", "skip", "fail"]},
        "env_smoke": {"type": "string", "enum": ["pass", "skip", "fail"]},
        "docs_target_update": {"type": "string", "enum": ["pass", "skip", "fail"]}
      },
      "additionalProperties": true
    },
    "reviewed_at": {"type": "string", "format": "date-time"}
  },
  "additionalProperties": true
}
